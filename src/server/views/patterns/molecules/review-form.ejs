<form class="review-form" method="POST">
	<header>
		<h2>Review artikel</h2>
		<button data-close-review class="hidden">X</button>
	</header>
	<input type="hidden" name="review-element"/>
	<input type="hidden" name="authorId" value="<%= article.authorId %>"/>
	<label>
		Review
		<textarea required data-stretch name="review"></textarea>
	</label>
	<label>
		Type review
		<select name="type" required>
			<option selected disabled>Selecteer een type</option>
			<option value="syntax">Grammaticaal</option>
			<option value="style">Stijl</option>
			<option value="content">Inhoud</option>
			<option value="layout">Opmaak</option>
			<option value="other">Anders</option>
		</select>
	</label>
	<input type="submit" value="Verzend">
</form>