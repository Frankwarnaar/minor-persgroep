<form class="editor" method="POST">
	<label>Titel
		<input data-child="title" type="text" name="title" value="<%= article.title ? article.title : '' %>"/>
	</label>
	<label id="editor-content">
		Schrijf hier je artikel in HTML
		<textarea name="content" value="<%= article.content ? article.content : '' %>"></textarea>
	</label>
	<div id="editor">
		<%- include('./article', {article: article, editor: true}) %>
	</div>
	<input type="submit" value="Opslaan"/>
</form>
<script src="/js/vendor/quill.min.js" type="text/javascript"></script>