<form class="editor" method="POST">
	<label>Titel
		<input data-child="title" type="text" name="title" value="<%= article.title ? article.title : '' %>"/>
	</label>
	<textarea hidden name="content" value="<%= article.content ? article.content : '' %>"></textarea>
	<div id="editor" data-editor>
		<%- include('./article', {article: article, editor: true}) %>
	</div>
	<input type="submit" value="Opslaan"/>
</form>
<script src="//cdn.quilljs.com/1.0.0/quill.min.js" type="text/javascript"></script>