<article
	data-article-id="<%= article._id %>"
	class="article"
	data-review="<%= typeof(review) !== 'undefined' ? 'true' : 'false' %>"
	data-align-reviews=<%= typeof(alignReviews) !== 'undefined' ? 'true' : 'false' %>>

	<% if (typeof(editor) === 'undefined') { %>
		<header>
			<h1 data-child="title"><%- article.title %></h1>
			<p>Geschreven op <date><%= new Date(article.timestamp).toLocaleString('NL-nl') %></date> door <%= article.author.name.first %> <%= article.author.name.last %></p>
		</header>
	<% } %>
	<%- article.content %>
	<% if (typeof(footer) !== 'undefined') { %>
		<footer>
			<% if (typeof(user) !== 'undefined') { %>
				<% if (user._id == article.authorId) { %>
					<a class="btn" href="/articles/edit/<%= article._id %>">Bewerk</a>
				<% } else { %>
					<a class="btn" href="/review/<%= article._id %>">Review</a>
				<% } %>
			<% } else { %>
				<a class="btn" href="/review/<%= article._id %>">Review</a>
			<% } %>
		</footer>
	<% } %>
</article>